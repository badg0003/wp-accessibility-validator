{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["wordpress__blocks", "react", "react-dom", "node"],
    "strict": true,
    "target": "es2020"
  },
  "include": [
    "src/**/*"
  ]
}
